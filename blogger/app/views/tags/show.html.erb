<h2>Posts where Tag = <%= @tag.name %></h2>


<table>
	<% @posts.each do |post| %>
		<tr>
			<td colspan="150px" rowspan="" headers=""><%= post.title %></td>
			<td colspan="150px" rowspan="" headers=""><%= post.author %></td>
			<td colspan="150px" rowspan="" headers=""><a href="/posts/<%= post.id %>">More</a></td>
		</tr>
	<% end %>

</table>